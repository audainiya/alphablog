<div class="row justify-content-center">
  <div class="col-10">
    <%= render 'shared/errors', obj: @article %>
    <%= form_with model: @article,class:"shadow p-3 mb-3 bg-info rounded", local: true do |form| %>
      <div class="form-group row">
        <%= form.label :title,class: "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= form.text_field :title,class: "form-control shadow rounded"%>
        </div>
      </div>
      <div class="form-group row">
        <%= form.label :description,class: "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= form.text_area :description,rows:10,class: "form-control shadow rounded"%>
        </div>
      </div>
      <div class="form-group row">
        <%= form.submit class:"btn btn-outline-light btn-lg"%>
      </div>
    </div>
  <% end %>
