<div data-controller="articles">
  <h1 class='text-center mt-4'>Listing All Articles</h1>
</div>
<div class="container">
  <% @articles.each do |article| %>
    <div class="row justify-content-md-center ">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header fst-italic fw-bold">
            by <%= article.user.username%>
          </div>
          <div class="card-body text-center">
            <h5 class="card-title"><%=link_to article.title,article_path(article),class: 'text-success'%></h5>
            <p class="card-text"><%=truncate(article.description,length:100)%></p>
            <%= link_to 'Edit', edit_article_path(article),class: 'btn btn-outline-info'%>
            <%= link_to 'View', article_path(article),class: 'btn btn-outline-success'%>
            <%= link_to 'Delete', articles_delete_path(article),class: 'btn btn-outline-danger',:method => :delete, data: { confirm: "Are you sure?"} %>
          </div>
          <div class="card-footer text-body-secondary">
            Created at <%=time_ago_in_words(article.created_at)%> ago, updated at <%=time_ago_in_words(article.updated_at)%> ago
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<p>
  <%= link_to 'Create new article', new_article_path%>
</p>
